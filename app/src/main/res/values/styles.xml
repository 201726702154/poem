<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whiteback</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="NightMode">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:statusBarColor">@color/grey</item>

        <item name="colorAccent">@color/whiteback</item>
        <item name="android:textColor">@color/whiteback</item>

        <item name="android:colorBackground">@color/grey</item>
        <item name="android:windowBackground">@color/grey</item>
    </style>


    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/whiteback</item>
        <item name="android:windowLightStatusBar">@color/black</item>
        <item name="android:windowBackground">@color/whiteback</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="BottomSheetEdit" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
